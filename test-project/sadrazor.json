{
  "templateDirectory": "templates",
  "modelDirectory": "models",
  "outputDirectory": "output",
  "defaultModelFormat": "auto",
  "watch": {
    "debounceMs": 500,
    "excludePatterns": [
      "**/node_modules/**",
      "**/bin/**",
      "**/obj/**",
      "**/.git/**"
    ],
    "recursive": true
  },
  "batch": {
    "modelGlobPattern": "**/*.{json,yml,yaml,xml}",
    "templateGlobPattern": "**/*.cshtml",
    "recursive": true,
    "outputPattern": "{name}.md"
  },
  "settings": {
    "verbose": false,
    "force": false,
    "encoding": "utf-8",
    "cache": {
      "enabled": true,
      "maxAgeMinutes": 60
    }
  }
}